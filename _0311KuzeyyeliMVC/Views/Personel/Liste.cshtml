@model IEnumerable<Personeller>

@{
    ViewBag.Title = "Liste";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Liste</h2>


<div class="col-md-12 col-sm-6  ">
    <div class="x_panel">
        <div class="x_title">
            <h2>Hover rows <small>Try hovering over the rows</small></h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="#">Settings 1</a>
                        <a class="dropdown-item" href="#">Settings 2</a>
                    </div>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content" style="display: block;">
            <table class="table table-hover">
                <thead>
                    <tr>
               
                        <th> Perno</th>
                        <th> Adı</th>
                        <th> Soyadı</th>
                        <th> Şehir</th>
                        <th>İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.PersonelID </td>
                        <td> @item.Adi</td>
                        <td> @item.SoyAdi</td>
                        <td> @item.Sehir</td>
                        <td>
                            <button class="btn btn-primary">Ekle</button>
                            <button class="btn btn-danger">Sil</button>
                            <button class="btn btn-success">Düzelt</button>
                            <div class="btn-group">
                                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    İşlemler
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="/Personel/Sil/@item.PersonelID">Sil</a>
                                    <a class="dropdown-item" href="/Personel/Guncel/@item.PersonelID">Düzelt</a>
                                    <a class="dropdown-item" href="/Personel/Detay/@item.PersonelID">Detay</a>
                                </div>
                            </div>
                        </td>
                    </tr>

            }
                    

                </tbody>
            </table>

        </div>
    </div>
</div>




